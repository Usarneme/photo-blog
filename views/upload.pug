extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        if msg
          p #{msg}
        h1.display-4.m-b-2 Upload Photos
        form(method='POST' action='/upload' enctype='multipart/form-data')
          input.form-control(type='file' placeholder='select a file' name='upl')
          input.form-control(type='text' placeholder='enter tags' name='tags')
          button.btn.btn-primary(type='submit') Upload Image
